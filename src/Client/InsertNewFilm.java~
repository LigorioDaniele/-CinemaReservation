    private void btnConfirmActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnConfirmActionPerformed
        if(!txtFilm_Title.getText().equals("") && !txtFilm_Duration.getText().equals("") && !txtFilm_Producer.getText().equals("")){
            
            FilmsItemList currentFilmItem = new FilmsItemList();
            currentFilmItem.setTitle(txtFilm_Title.getText());
            try {
                currentFilmItem.setDuration(Integer.parseInt(txtFilm_Duration.getText()));
            }
            catch(Exception e){
                JOptionPane.showMessageDialog(this,
                                            "la durata deve essere espressa in minuti!",
                                            "Registrazione utente",
                                            JOptionPane.INFORMATION_MESSAGE);
            }
            currentFilmItem.setProducer(txtFilm_Producer.getText());
            
            BaseXMLCommand<String, String, FilmsItemList> command = new BaseXMLCommand<>("CreateFilm",  null, currentFilmItem);
            _runClient.sendQuery(Command.Encoder(command));
            BaseXMLCommand<String, String, String> response = Command.Decoder(_runClient.getResponse());
            if(response.getValue().toString().equals("true")) {
                JOptionPane.showMessageDialog(this,
                                            "Operazione effettuata con successo!",
                                            "Creazione Film",
                                            JOptionPane.INFORMATION_MESSAGE);
                this.setVisible(false);
            }
            else {
                JOptionPane.showMessageDialog(this,
                                            "Errore durante l'operazione! Riprova!",
                                            "Creazione Film",
                                            JOptionPane.ERROR_MESSAGE);
            }
        }
        else {
            JOptionPane.showMessageDialog(this,
                                            "Devi compilare correttamente tutti i campi!",
                                            "Creazione Film",
                                            JOptionPane.ERROR_MESSAGE);
        }
        _ucFilmManagement.MainGrid_Rebind();
    }//GEN-LAST:event_btnConfirmActionPerformed

    private void btnCancelActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCancelActionPerformed
