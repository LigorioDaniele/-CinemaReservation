    public void MainGrid_Rebind(){
        filmArray.clear();
        BaseXMLCommand<String, String, ArrayList<FilmsItemList>> command = new BaseXMLCommand<>("GetFilmList",  null, null);
        _mainWindow._runClient.sendQuery(Command.Encoder(command));
        BaseXMLCommand<String, String, ArrayList<FilmsItemList>> response = Command.Decoder(_mainWindow._runClient.getResponse());
        filmArray = (ArrayList<FilmsItemList>)response.getValue(); 
        // create the binding from List to JTable
        tb = SwingBindings.createJTableBinding(org.jdesktop.beansbinding.AutoBinding.UpdateStrategy.READ_WRITE, filmArray, jTable2);
        
        // define the properties to be used for the columns
        BeanProperty username = BeanProperty.create("title");
        BeanProperty password = BeanProperty.create("duration");
        BeanProperty isAdmin = BeanProperty.create("producer");
        
        // configure how the properties map to columns
        tb.addColumnBinding(username).setColumnName("Titolo").setEditable(false);
        tb.addColumnBinding(password).setColumnName("Durata(minuti)").setEditable(false);
        tb.addColumnBinding(isAdmin).setColumnName("Regista").setEditable(false);
        // realize the binding
        tb.bind();
    }
    
