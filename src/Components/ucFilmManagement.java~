    private void btnSaveMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_btnSaveMouseClicked
        FilmsItemList currentFilmItem = new FilmsItemList();
        currentFilmItem.setTitle(txtFilm_Title.getText());
        currentFilmItem.setDuration(Integer.parseInt(txtFilm_duration.getText()));
        currentFilmItem.setProducer(txtFilm_producer.getText());
        BaseXMLCommand<String, String, FilmsItemList> command = new BaseXMLCommand<>("UpdateFilmByTitle",  null, currentFilmItem);
        _mainWindow._runClient.sendQuery(Command.Encoder(command));
        BaseXMLCommand<String, String, String> response = Command.Decoder(_mainWindow._runClient.getResponse());
        if(response.getValue().toString().equals("true")){
            txtFilm_Title.setText("");
            txtFilm_duration.setText("");
            txtFilm_producer.setText("");
        }
        MainGrid_Rebind();
    }//GEN-LAST:event_btnSaveMouseClicked

    private void jTable2MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTable2MouseClicked
        Object selectedTitle = jTable2.getModel().getValueAt(jTable2.getSelectedRow(), 0);
        txtFilm_Title.setText(selectedTitle.toString());
        Object selectedDuration = jTable2.getModel().getValueAt(jTable2.getSelectedRow(), 1);
        txtFilm_duration.setText(selectedDuration.toString());
        Object selectedProducer = jTable2.getModel().getValueAt(jTable2.getSelectedRow(), 2);
        txtFilm_producer.setText(selectedProducer.toString());
        
    }//GEN-LAST:event_jTable2MouseClicked

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnDeleteActionPerformed
        Object selectedFilmTitle = jTable2.getModel().getValueAt(jTable2.getSelectedRow(), 0);
        if(JOptionPane.showConfirmDialog(this,
                                            "Sei sicuro di voler eliminare l'utente '" + selectedFilmTitle.toString() + "'?",
                                            "Registrazione utente",
                                            JOptionPane.INFORMATION_MESSAGE) == 0) {
            FilmsItemList currentFilmItem = new FilmsItemList();
            currentFilmItem.setTitle(txtFilm_Title.getText());
            currentFilmItem.setDuration(Integer.parseInt(txtFilm_duration.getText()));
            currentFilmItem.setProducer(txtFilm_producer.getText());
            BaseXMLCommand<String, String, FilmsItemList> command = new BaseXMLCommand<>("DeleteFilmFilmByTitle",  null, currentFilmItem);
            _mainWindow._runClient.sendQuery(Command.Encoder(command));
            BaseXMLCommand<String, String, String> response = Command.Decoder(_mainWindow._runClient.getResponse());
            if(response.getValue().toString().equals("true")){
                txtFilm_Title.setText("");
                txtFilm_duration.setText("");
                txtFilm_producer.setText("");
            }
            MainGrid_Rebind();
        }
    }//GEN-LAST:event_btnDeleteActionPerformed

    private void btnNewActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnNewActionPerformed
        InsertNewFilm i = new InsertNewFilm(this, _mainWindow._runClient);
    }//GEN-LAST:event_btnNewActionPerformed

